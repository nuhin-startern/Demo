<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:layout_marginRight="@dimen/layout_margin_right"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RatingBar
                android:id="@+id/ratingReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/txtReviewOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/text_margin_difference"
                android:text="#D-1345661"
                android:textSize="@dimen/normal_14sp_text_size"
                android:layout_marginRight="@dimen/text_margin_difference"
                android:layout_marginTop="4dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgReviewDetails"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_external_link_square_with_an_arrow_in_right_diagonal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtReviewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="Good Job Done!Good Job Done!"
            android:paddingRight="@dimen/text_margin_difference"
            android:textSize="@dimen/normal_16sp_text_size"
            android:layout_marginTop="@dimen/text_margin_difference"
            android:textColor="@color/titleTextColor"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtReviewSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_margin_difference"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/text_margin_difference"
            android:text="Very good ServiceVery good ServiceVery good ServiceVery good ServiceVery good ServiceVery good Service"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/normal_14sp_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewLine"
            android:layout_marginTop="@dimen/layout_margin_top"/>
    </LinearLayout>
</LinearLayout>
