<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--branch 1-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/layout_margin_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/partnerTolbar"
                    android:gravity="center"
                    android:paddingLeft="@dimen/layout_margin_left"
                    android:paddingRight="@dimen/layout_margin_right">

                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Express Solution Limited"
                        android:textSize="@dimen/semi_big_24sp_text_size"
                        android:textColor="#fff"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCompanyImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-24dp"
                    android:src="@drawable/john"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <RatingBar
                    android:id="@+id/ratingBarCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:numStars="5"
                    android:stepSize="0.9"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/txtCompanyRatingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="(12)"
                    android:textColor="@color/textColorBlack"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textSize="@dimen/normal_14sp_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginBottom="@dimen/layout_margin_bottom"
                android:layout_marginRight="@dimen/layout_margin_right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/new_order_image_height_weight"
                        android:layout_height="@dimen/new_order_image_height_weight"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_build_grey_24dp"
                        />

                    <TextView
                        android:id="@+id/txtPartnerDetailsServiceNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:text="20 Services"
                        android:textSize="@dimen/normal_16sp_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin_difference">

                    <ImageView
                        android:layout_width="@dimen/new_order_image_height_weight"
                        android:layout_height="@dimen/new_order_image_height_weight"
                        android:gravity="center_vertical"
                        app:srcCompat="@drawable/ic_location_on_grey_24px"
                        />
                    <TextView
                        android:id="@+id/txtPartnerDetailsResourceNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:text="44 Resources"
                        android:textSize="@dimen/normal_16sp_text_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin_difference">

                    <ImageView
                        android:layout_width="@dimen/new_order_image_height_weight"
                        android:layout_height="@dimen/new_order_image_height_weight"
                        android:gravity="center_vertical"
                        app:srcCompat="@drawable/ic_access_time_grey_24px"
                        />
                    <TextView
                        android:id="@+id/txtPartnerDetailsServiceArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:text="4 Service Areas"
                        android:textSize="@dimen/normal_16sp_text_size" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/new_order_image_height_weight"
                    android:layout_height="@dimen/new_order_image_height_weight"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_settings_titile_icon_24px"
                    android:layout_marginLeft="@dimen/layout_margin_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/layout_margin_left"
                    android:text="Basic Informations"
                    android:textStyle="bold"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/semi_big_20sp_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginBottom="@dimen/layout_margin_bottom"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtPartnerDetailsAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Address: 19/5, C Block, 3rd Floor, Tajmohal Road, Mohammadpur, Dhaka - 1207"
                    android:textSize="@dimen/normal_16sp_text_size" />

                <TextView
                    android:id="@+id/txtPartnerDetailsEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_margin_difference"
                    android:gravity="center_vertical"
                    android:text="Email: nuhin13@gmail.com"
                    android:textSize="@dimen/normal_16sp_text_size" />

                <TextView
                    android:id="@+id/txtPartnerDetailsOnBoardDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_margin_difference"
                    android:gravity="center_vertical"
                    android:text="Member Since: 15th Nov. 2015"
                    android:textSize="@dimen/normal_16sp_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginBottom="@dimen/text_margin_difference"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/new_order_image_height_weight"
                    android:layout_height="@dimen/new_order_image_height_weight"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_settings_titile_icon_24px"
                    android:layout_marginLeft="@dimen/layout_margin_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/layout_margin_top"
                    android:text="Operational Informations"
                    android:textStyle="bold"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/semi_big_20sp_text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/layout_margin_left"
                android:layout_marginTop="@dimen/text_margin_difference"
                android:text="Working Day : "
                android:textStyle="bold"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/normal_16sp_text_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:weightSum="7">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="SUN"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_14sp_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="SUN"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_18sp_text_size"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="SUN"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_18sp_text_size"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="SUN"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_18sp_text_size"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="SUN"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_18sp_text_size"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="SUN"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_18sp_text_size"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="SUN"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/text_margin_difference"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_18sp_text_size"
                    android:layout_marginRight="@dimen/text_margin_difference"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/layout_margin_left"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:text="Working Hours : "
                android:textStyle="bold"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/normal_16sp_text_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginBottom="@dimen/layout_margin_bottom">

                <TextView
                    android:id="@+id/txtPartnerDetailsStartingHour"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="9.00 P.M."
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_14sp_text_size"
                    android:background="@color/workingHour"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/text_margin_difference"
                    android:paddingRight="@dimen/text_margin_difference"
                    android:text="to"
                    android:textStyle="normal"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/semi_big_20sp_text_size"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtPartnerDetailsFinishingHour"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@color/workingHour"
                    android:gravity="center"
                    android:text="10.00 A.M."
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_14sp_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
            <include layout="@layout/on_going_jobs"/>
            <include layout="@layout/order_history"/>
            <include layout="@layout/all_review_card"/>
            <include layout="@layout/earning_test"/>
            <include layout="@layout/card_for_order_price_break_down"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
