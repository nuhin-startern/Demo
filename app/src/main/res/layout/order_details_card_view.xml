<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_margin_left"
    android:layout_marginRight="@dimen/layout_margin_right"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:layout_marginBottom="@dimen/layout_margin_top"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginRight="@dimen/layout_margin_right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgOrderDetailsCardPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/ic_plus_sign_in_a_black_circle" />

                    <TextView
                        android:id="@+id/txtOrderDetailsCardServiceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:paddingRight="@dimen/text_margin_difference"
                        android:text="Basic Ac Servicing Basic Ac Servicing Ac Servicing "
                        android:textSize="@dimen/normal_18sp_text_size"
                        android:textColor="@color/textColorBlack"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtOrderDetailsCardStatus"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/new_order_price_color"
                        android:gravity="center"
                        android:text="Scedule Due"
                        android:textColor="#fff"
                        android:textSize="@dimen/normal_14sp_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginRight="@dimen/layout_margin_right"
                    >

                    <TextView
                        android:id="@+id/txtOrderDetailsCardServiceType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:text="Service Type: Inspection"
                        android:textSize="@dimen/normal_14sp_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/text_margin_difference"
                        android:text="21st April, 2017"
                        android:textSize="@dimen/normal_14sp_text_size" />

                    <TextView
                        android:id="@+id/txtOrderDetailsCardAdditionalInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/text_margin_difference"
                        android:text="Additional Informations: asdgasdgasdg asdgasdgasdgasdgasdgasdgasdgasdg"
                        android:textSize="@dimen/normal_14sp_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtOrderDetailsCardResourceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:text="Resource: Jhon Doe"
                            android:textSize="@dimen/normal_14sp_text_size"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imgOrderDetailsCardResourceCall"
                            android:layout_width="@dimen/order_details_call_image_height_weight"
                            android:layout_height="@dimen/order_details_call_image_height_weight"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_phone_white_24px"
                            android:padding="@dimen/resource_details_padding"
                            android:background="@drawable/circle_background"
                            android:layout_marginLeft="@dimen/layout_margin_left"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtOrderDetailsCardResourceSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Schedule : 10.333 - 455.0333 P.M."
                        android:textSize="@dimen/normal_14sp_text_size" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_margin_difference">

                        <TextView
                            android:id="@+id/txtOrderDetailsCardMaterialUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Material Used"
                            android:textSize="@dimen/normal_14sp_text_size"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:id="@+id/layOrderDetailsCardMaterialChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="left">

                            <ImageView
                                android:layout_width="@dimen/resource_details_image_height_weight"
                                android:layout_height="@dimen/resource_details_image_height_weight"
                                android:layout_gravity="left"
                                app:srcCompat="@drawable/ic_external_link_square_with_an_arrow_in_right_diagonal"
                                android:padding="@dimen/resource_details_padding" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Change"
                                android:textSize="@dimen/normal_14sp_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewLine"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/layout_margin_top"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Change"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:background="#10ffffff"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
