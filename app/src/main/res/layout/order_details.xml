<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                android:paddingLeft="@dimen/layout_margin_left"
                android:paddingBottom="@dimen/layout_margin_bottom"
                android:gravity="bottom">


                <TextView
                    android:id="@+id/txtOrderDetailsOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="D - 123456789987456321 "
                    android:textSize="@dimen/semi_big_20sp_text_size"
                    android:layout_marginBottom="@dimen/text_margin_difference"
                    android:textColor="#fff"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtOrderDetailsOrderStatus"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/new_order_price_color"
                        android:layout_marginRight="@dimen/layout_margin_right"
                        android:gravity="center"
                        android:text="Oreder: Process"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="@dimen/normal_12sp_text_size" />

                    <TextView
                        android:id="@+id/txtOrderDetailsOrderBillStatus"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/new_order_price_color"
                        android:gravity="center"
                        android:text="Bill: Due"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="@dimen/normal_12sp_text_size" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/new_order_image_height_weight"
                        android:layout_height="@dimen/new_order_image_height_weight"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_settings_grey_24px" />

                    <TextView
                        android:id="@+id/txtOrderDetailsJobNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:text="4 Jobs"
                        android:textSize="@dimen/normal_16sp_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_difference"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/new_order_image_height_weight"
                        android:layout_height="@dimen/new_order_image_height_weight"
                        android:gravity="center_vertical"
                        app:srcCompat="@drawable/ic_location_on_grey_24px" />

                    <TextView
                        android:id="@+id/txtOrderDetailsLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:text="Mohammadpur"
                        android:textSize="@dimen/normal_16sp_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_difference"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/new_order_image_height_weight"
                        android:layout_height="@dimen/new_order_image_height_weight"
                        android:gravity="center_vertical"
                        app:srcCompat="@drawable/ic_access_time_grey_24px" />

                    <TextView
                        android:id="@+id/txOrderDetailsCompletedTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/text_margin_difference"
                        android:text="Completed on 1st Nov."
                        android:textSize="@dimen/normal_16sp_text_size" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/layout_margin_bottom"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:background="@drawable/rectengle_design"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Log"
                        android:textStyle="bold"
                        android:textSize="@dimen/normal_18sp_text_size"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/viewLine"
                    android:layout_alignParentBottom="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_credit_card_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Bill"
                        android:textStyle="bold"
                        android:textSize="@dimen/normal_18sp_text_size"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/new_order_image_height_weight"
                    android:layout_height="@dimen/new_order_image_height_weight"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_settings_titile_icon_24px"
                    android:layout_marginLeft="@dimen/layout_margin_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/layout_margin_left"
                    android:text="Service Informations"
                    android:textStyle="bold"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/semi_big_20sp_text_size" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleViewOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_right">

            </android.support.v7.widget.RecyclerView>

            <include layout="@layout/order_details_card_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/new_order_image_height_weight"
                    android:layout_height="@dimen/new_order_image_height_weight"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_settings_titile_icon_24px"
                    android:layout_marginLeft="@dimen/layout_margin_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/layout_margin_left"
                    android:text="Delivery Informations"
                    android:textStyle="bold"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/semi_big_20sp_text_size"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imgOrderDetailsDelivaryPhoneNumberCall"
                    android:layout_width="@dimen/order_details_call_image_height_weight"
                    android:layout_height="@dimen/order_details_call_image_height_weight"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_phone_white_24px"
                    android:padding="@dimen/resource_details_padding"
                    android:background="@drawable/circle_blue"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginRight="@dimen/layout_margin_right"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginBottom="@dimen/layout_margin_bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOrderDetailsDaliveryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Name: Jodu"
                    android:textSize="@dimen/normal_16sp_text_size" />

                <TextView
                    android:id="@+id/txtOrderDetailsDaliveryPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_margin_difference"
                    android:gravity="center_vertical"
                    android:text="Phone: 01364598786"
                    android:textSize="@dimen/normal_16sp_text_size" />

                <TextView
                    android:id="@+id/txtOrderDetailsDaliveryAdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_margin_difference"
                    android:gravity="center_vertical"
                    android:text="Address: njgngjdskjgifjg ndjgfghjfngm fvnsdghsdiohgndskgnsv oibg"
                    android:textSize="@dimen/normal_16sp_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
